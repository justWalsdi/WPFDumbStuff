        <Button Content="Матрица сырье-продукт" Click="matrix" HorizontalAlignment="Left" Margin="381,38,0,0" VerticalAlignment="Top" Width="164"/>
        <DataGrid x:Name="dgTable"  HorizontalAlignment="Left" Height="281" Margin="94,78,0,0" VerticalAlignment="Top" Width="484"/>
    </Grid>
</Window>
