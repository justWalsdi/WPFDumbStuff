<Window x:Class="Lab_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ListView Name="lvUsers">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Сырье" Width="120" DisplayMemberBinding="{Binding NameSyrie}" />
                    <GridViewColumn Header="Фирменный" Width="110" DisplayMemberBinding="{Binding Rashod1}" />
                    <GridViewColumn Header="Бисквитно-фруктовый" Width="160" DisplayMemberBinding="{Binding Rashod2}" />
                    <GridViewColumn Header="Киевский" Width="100" DisplayMemberBinding="{Binding Rashod3}" />
                    <GridViewColumn Header="Бисквитный" Width="100" DisplayMemberBinding="{Binding Rashod4}" />
                    <GridViewColumn Header="С творожным кремом" Width="150" DisplayMemberBinding="{Binding Rashod5}" />                  
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
