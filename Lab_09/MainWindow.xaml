<Window x:Class="Lab_09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_09"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Загрузить Информацию" Click="ZagruzkaCSV" HorizontalAlignment="Left" Margin="10,25,0,0" Grid.Row="1" VerticalAlignment="Top" Width="148" RenderTransformOrigin="0.338,-0.33"/>
        <DataGrid x:Name="CsvDataInput" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="364" Margin="10,51,0,0" Grid.Row="1" VerticalAlignment="Top" Width="589">
            <DataGrid.Columns >
                <DataGridTextColumn Width="200" Binding="{Binding NameData}" Header="Name"/>
                <DataGridTextColumn Width="100" Binding="{Binding RashodValue}" Header="Rashod"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
